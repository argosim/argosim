<!-- This is the main POM file for the NGS-tools java project. -->
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
  <groupId>net.knasmueller</groupId>
  <artifactId>hulk</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <name>Hulk: A Programmable Simulator for Genomic Mutations</name>
	<developers>
		<developer>
			<id>bk</id>
			<name>Bernhard Knasmueller</name>
			<email>bernhard.knasmueller@univie.ac.at</email>
		</developer>
	</developers>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.0.2</version>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>
			<!-- package with external dependencies, see http://acs.lbl.gov/~ksb/Scratch/Maven_notes.html#jar -->
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<descriptors>
						<descriptor>src/main/mvn-assemblies/dist.xml</descriptor>
					</descriptors>

					<archive>
						<manifest>
							<mainClass>at.ac.univie.knasmueller.hulk.HulkDemo</mainClass>
							<packageName>at.ac.univie.knasmueller.hulk</packageName>
							<addClasspath>true</addClasspath>
						</manifest>
					</archive>
					<!-- <descriptorRefs>
						<descriptorRef>jar-with-dependencies</descriptorRef>
					</descriptorRefs>  -->
					<manifest>
							<mainClass>at.ac.univie.knasmueller.hulk.HulkDemo</mainClass>
							<packageName>at.ac.univie.knasmueller.hulk</packageName>
							<addClasspath>true</addClasspath>
						</manifest>
					<!-- uncomment to use a custom manifest -->
					<!--manifestFile>src/main/mvn-assemblies/MANIFEST.MF</manifestFile -->

				</configuration>
			</plugin>

		</plugins>
	</build>
	<repositories>	
		<repository>
			<id>cibiv-repo</id>
			<name>CIBIV Maven Repository</name>
			<url>http://aristoteles.cibiv.univie.ac.at/artifactory/repo/</url>
			<releases>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>apache-repo-releases</id>
			<url>https://repository.apache.org/content/repositories/releases/</url>
			<releases>
				<enabled>true</enabled>
			</releases>
		</repository>
		<repository>
			<id>mvnrepository</id>
			<name>http://mvnrepository.com/</name>
			<url>http://mvnrepository.com/</url>
		</repository>

		<repository>
			<id>biojavarepo</id>
			<name>Biojava Maven Repository</name>
			<url>http://biojava.org/download/maven/</url>
			<releases>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
	</repositories>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.7</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
			<version>2.3</version>
		</dependency>
<!-- 		<dependency> -->
<!-- 			<groupId>cibiv</groupId> -->
<!-- 			<artifactId>ngs-tools</artifactId> -->
<!-- 			<version>0.0.1</version> -->
<!-- 		</dependency> -->
		<dependency>
			<groupId>codoc</groupId>
			<artifactId>codoc</artifactId>
			<version>0.0.2</version>
		</dependency>
	</dependencies>

</project>